<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/stats_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/event_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".7">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stats_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stats_guideline"
        android:theme="@style/StatsTheme">

        <TextView
            android:id="@+id/zero_stat_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/red"
            android:textSize="14sp">
        </TextView>

        <TextView
            android:id="@+id/stat_one_header_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp">
        </TextView>

        <TextView
            android:id="@+id/stat_one_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/stat_one_header_textView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp">
        </TextView>

        <TextView
            android:id="@+id/stat_two_header_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stat_one_header_textView"
            android:layout_marginTop="6dp"
            android:layout_marginStart="32dp">
        </TextView>

        <TextView
            android:id="@+id/stat_two_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/stat_two_header_textView"
            app:layout_constraintTop_toBottomOf="@id/stat_one_header_textView"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp">
        </TextView>

        <TextView
            android:id="@+id/stat_three_header_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="4dp">
        </TextView>

        <TextView
            android:id="@+id/stat_three_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/stat_three_header_textView"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp">
        </TextView>

        <TextView
            android:id="@+id/stat_four_header_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/stat_three_header_textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="6dp">
        </TextView>

        <TextView
            android:id="@+id/stat_four_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/stat_three_header_textView"
            app:layout_constraintStart_toEndOf="@id/stat_four_header_textView"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bottom_of_stats_divider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_constraint_layout"
        android:layout_marginTop="4dp"
        android:background="@color/black">
    </View>

    <FrameLayout
        android:id="@+id/game_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_of_stats_divider"
        app:layout_constraintBottom_toTopOf="@id/top_of_events_divider"
        android:background="@color/lighter_grey">
    </FrameLayout>

    <View
        android:id="@+id/top_of_events_divider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/events_layout"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/black">
    </View>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/events_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_guideline">

        <TextView
            android:id="@+id/existence_timer_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/start_stop_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            android:textSize="22sp">
        </TextView>

        <com.google.android.material.button.MaterialButton
            style="@style/MaterialButtonStyle"
            android:id="@+id/start_stop_button"
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/event_textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:textSize="16sp">
        </com.google.android.material.button.MaterialButton>

        <TextView
            android:id="@+id/event_textView"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:textSize="18sp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>