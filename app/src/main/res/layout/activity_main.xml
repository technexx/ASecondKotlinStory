<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/stats_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15">
    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stats_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stats_guideline"
        android:theme="@style/StatsTheme">

        <TextView
            android:id="@+id/stat_one_header_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp">
        </TextView>

        <TextView
            android:id="@+id/stat_one_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/stat_one_header_textView"
            android:layout_marginStart="16dp">
        </TextView>

        <TextView
            android:id="@+id/stat_two_header_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stat_one_header_textView"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp">
        </TextView>

        <TextView
            android:id="@+id/stat_two_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/stat_two_header_textView"
            app:layout_constraintTop_toBottomOf="@id/stat_one_header_textView"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp">
        </TextView>

        <TextView
            android:id="@+id/stat_three_header_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/stat_three_textView"
            android:layout_marginEnd="12dp">
        </TextView>

        <TextView
            android:id="@+id/stat_three_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp">
        </TextView>

        <TextView
            android:id="@+id/stat_four_header_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/stat_three_header_textView"
            app:layout_constraintEnd_toStartOf="@id/stat_four_textView"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp">
        </TextView>

        <TextView
            android:id="@+id/stat_four_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/stat_three_header_textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bottom_of_stats_divider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stats_constraint_layout"
        android:layout_marginTop="4dp"
        android:background="@color/black">
    </View>

    <FrameLayout
        android:id="@+id/game_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_of_stats_divider"
        app:layout_constraintBottom_toTopOf="@id/top_of_events_divider"
        android:background="@color/lighter_grey">
    </FrameLayout>

    <View
        android:id="@+id/top_of_events_divider"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/existence_timer_textView_header"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/black">
    </View>

    <TextView
        android:id="@+id/existence_timer_textView_header"
        android:text="@string/time_since_spawn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/start_stop_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:textSize="22sp">
    </TextView>

    <TextView
        android:id="@+id/existence_timer_textView"
        android:text="@string/zeroed_spawn_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/start_stop_button"
        app:layout_constraintStart_toEndOf="@id/existence_timer_textView_header"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:textSize="22sp">
    </TextView>

    <com.google.android.material.button.MaterialButton
        style="@style/MaterialButtonStyle"
        android:id="@+id/start_stop_button"
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/event_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="16sp">
    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/event_textView"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/zero_stat_warning"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp">
    </TextView>

    <TextView
        android:id="@+id/zero_stat_warning"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:textColor="@color/teal_200"
        android:textSize="18sp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>