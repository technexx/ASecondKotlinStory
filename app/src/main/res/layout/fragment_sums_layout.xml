<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sums_gridView_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".75">
    </androidx.constraintlayout.widget.Guideline>

    <GridView
        android:id="@+id/sums_cards_gridView"
        android:layout_width="350dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sums_gridView_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </GridView>

    <ProgressBar
        android:id="@+id/sums_cards_timer_progress_bar"
        android:layout_width="300dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/sums_cards_gridView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"
        android:progressBackgroundTint="@color/teal_200"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal">
    </ProgressBar>

    <TextView
        android:id="@+id/target_answer_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sums_gridView_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="26sp">
    </TextView>

    <TextView
        android:id="@+id/sums_state_of_answer_textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sums_gridView_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>