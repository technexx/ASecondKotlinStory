<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ASecondKotlinStory.Day" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MaterialButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="StatsTheme">
        <item name="android:textSize">16sp</item>
    </style>
</resources>